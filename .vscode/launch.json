  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "pythonPath": "/usr/local/bin/python",

      "env": {
        "FLASK_APP": "src/main.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": ["run", "--no-debugger", "--no-reload", "--host=0.0.0.0"],
      "jinja": true
    }
  ]
}
